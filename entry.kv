<Entry>:
    entry_carousel: entry_carousel_kv
    btnAdmin: btnAdmin_kv
    btnEntry: btnEntry_kv
    btnSave: btnSave_kv
    lblHd: lblHd_kv

    FloatLayout:

        canvas.before:
            Color:
                rgba: green
            Rectangle:
                pos: self.pos
                size: self.size

        Carousel:
            id: entry_carousel_kv

            #direction: 'left'

            size_hint_y: 0.5
            size_hint_x: 1
            pos_hint: {'top': 0.9, 'right': 0.9}

        Button:
            id: btnSave_kv
            text: 'Save'

            size_hint_y: 0.15
            size_hint_x: 0.3
            pos_hint: {'top': 0.4, 'right': 0.6}

            on_press: root.saveBtn_pressed()

        Label:
            id: lblHd_kv
            text: 'Welcome'
            font_size: 32
            pos_hint: {'top': 1, 'right': 0.7}
            size_hint_y: 0.15
            size_hint_x: 0.4

        Button:
            id: btnEntry_kv
            text: 'Use table carousel'

            size_hint_y: 0.15
            size_hint_x: 0.4
            pos_hint: {'top': 0.17, 'right': 0.45}

            on_press: root.entryBtn_pressed()

        Button:
            id: btnAdmin_kv
            text: 'Use admin'

            size_hint_y: 0.15
            size_hint_x: 0.4
            pos_hint: {'top': 0.17, 'right': 0.95}

            on_press: root.adminBtn_pressed()

